{
  "name": "@scaljeri/chess-com-bot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist && yarn build:frontend && yarn build:backend && yarn copy-api-worker",
    "build:frontend": "di -d -c tsc -b ./src -i shared frontend/main.ts -- -p tsconfig-frontend.json && yarn build:browserify",
    "build:backend": "di -d -c tsc -b ./src -i shared ./src/backend/main.ts -- -p tsconfig-backend.json",
    "build:browserify": "browserify ./dist/frontend/main-di.js -o ./dist/frontend/main-di-browserified.js",
    "copy-api-worker": "cp ./src/backend/worker-import.js ./dist/",
    "cleanup": "nodemon -e ts --watch './src/backend/**/*' --ext ts --exec 'node' ./scripts/cleanup.js",
    "start": "concurrently \"yarn cleanup\" \"yarn live\"",
    "start:bot": "yarn start",
    "watch:frontend": "nodemon --watch './src/frontend/**/*' --ext ts --exec \"rm -rf ./dist && yarn build:frontend\"",
    "live": "nodemon -e ts --ignore ./src/backend/main-di.ts --watch './src/backend/**/*.ts' --exec yarn run:live",
    "live:computer": "nodemon -e ts  --watch './src/backend/**/*.ts' --exec yarn build:backend",
    "run:live": "di -d -c ./src/backend/main.ts -- -g komodo",
    "run:computer": "di -d -c ./src/main.ts -- -g computer"
  },
  "dependencies": {
    "@overnightjs/core": "^1.6.8",
    "@overnightjs/logger": "^1.1.7",
    "@scaljeri/chess-shared": "1.0.0",
    "@types/puppeteer": "^1.12.4",
    "@types/socket.io": "^2.1.2",
    "browserify": "16.2.3",
    "chess-base": "^1.2.0",
    "chess.js": "0.10.2",
    "chromedriver": "74.0.0",
    "concurrently": "4.1.0",
    "di-xxl": "~1.2.1",
    "dotenv": "^8.0.0",
    "eventhub-xxl": "2.3.0",
    "express": "^4.17.1",
    "mime-types": "^2.1.24",
    "p-retry": "4.1.0",
    "puppeteer": "^1.18.1",
    "socker.io": "^0.0.0-alpha-beta",
    "stockfish.js": "^10.0.1",
    "stockfish.wasm": "^0.5.10",
    "ts-node": "^8.1.0",
    "typescript": "4.3.2",
    "webdriverio": "5.8.3",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^12.0.5",
    "nodemon": "1.19.0",
    "puppeteer-extra": "^2.1.3",
    "puppeteer-extra-plugin-user-data-dir": "^2.1.2",
    "puppeteer-extra-plugin-user-preferences": "^2.1.2",
    "reflect-metadata": "0.1.13",
    "tsconfig-paths": "3.8.0",
    "wdio-chromedriver-service": "5.0.1"
  }
}
